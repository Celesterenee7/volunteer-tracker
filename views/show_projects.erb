<h3>Projects</h3>

<% if @projects.any? %>
<ul>
  <% @projects.each do |project| %>
  <li><a href="/projects/<%= project.id %>"><strong><%= project.title %></strong></a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no projects to display.</p>
<% end %>

<p><a href="/projects/new">Add a new project</a></p>
<p><a href="/">Return to main page</a></p>