<h2 class="title">Update: <%= @project.title %></h2>

<form action="/projects/<%= @project.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Rename Project:</label>
  <input type="text" name="title" class="form-control">
  <br>
  <br>
  <button class="main-button" type="submit">Update Project</button>
</form>
<br>
<% volunteers = @project.volunteers %>
<% if volunteers.any? %>
<ul>
<% volunteers.each do |volunteer| %>
  <li>
  <a href="/volunteers/<%= volunteer.id %>/edit"><%= volunteer.name %></a>
  <br>
  </li>
  <% end %>
</ul>
<% else %>
<p>There are currently no volunteers to display</p>
<% end %>

<br>
<br>

<a href="/projects/<%= @project.id %>"><em>Return to Project Page</em></a>
<h3>or...</h3>
<br>
<form action="/projects/<%= @project.id %>/edit" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="delete-button" name="button">Delete Project</button>
</form>